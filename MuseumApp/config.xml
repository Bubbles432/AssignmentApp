<?xml version="1.0" encoding="UTF-8" ?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.helloworld"
        version   = "1.0.0">

    <name>Museum Locator</name>

    <description>
        A simple application that looks at the museums or history walks within the users area.
    </description>

    <author href="worcester.ac.uk" email="c.bowers@worc.ac.uk">
        WBS Computing
    </author>

    <preference name="permissions"                value="none"/>   
	
	<access origin="*"/>
   	<plugin name="cordova-plugin-whitelist" version="1" />
	<plugin name="cordova-plugin-geolocation" spec="~2.4.2" />
	<plugin name="cordova-plugin-dialogs" spec="~1.3.0" />
	<plugin name="de.appplant.cordova.plugin.local-notification" source="npm" />
</widget>
